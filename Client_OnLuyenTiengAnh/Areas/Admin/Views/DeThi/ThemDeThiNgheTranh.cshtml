@using Client_OnLuyenTiengAnh.Areas.Admin.Response;
@using Client_OnLuyenTiengAnh.Areas.Admin.Models
@model List<GetListNghe_CauHoiResponse>
@{
    ViewBag.Title = "ThemDeThiNgheTranh";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    string maDe = (string)ViewBag.maDe;


}



<h2 class="center">Thêm đề thi phần nghe tranh vẽ</h2>

<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("ThemDeThiNgheTranh", "DeThi", FormMethod.Post))
        {
            <div class="center">
                <label>Mã đề: </label><input type="text" value="@maDe" disabled="disabled" />
            </div>
            <br />
            <br />
            <div class="row">
                <div class="col-xs-12">
                    <table id="simple-table" class="table  table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="center">

                                </th>
                                <th class="detail-col">Detail</th>
                                <th>FILE Nghe</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (GetListNghe_CauHoiResponse d in Model)
                            {
                                <tr>
                                    <td class="center">
                                        <label class="pos-rel">
                                            <input type="radio" class="ace" name="maNghe" value="@d.nghe.ID" />
                                            <span class="lbl"></span>
                                        </label>
                                    </td>
                                    <td class="center">
                                        <div class="action-buttons">
                                            <a href="#" class="green bigger-140 show-details-btn" title="Show Details">
                                                <i class="ace-icon fa fa-angle-double-down"></i>
                                                <span class="sr-only">Details</span>
                                            </a>
                                        </div>
                                    </td>
                                    <td><audio class="html5_audio" controls=""><source src="@d.nghe.FileNghe" type="audio/mpeg">                       Your browser does not support the audio element.                    </audio></td>

                                </tr>
                                @*bảng detail*@
                                <tr class="detail-row">
                                    <td colspan="8">
                                        <div class="table-detail">
                                            <div class="row">
                                                <div class="col-xs-12 col-sm-12" style="padding-left:87px">
                                                    <table id="simple-table" class="table  table-bordered table-hover">

                                                        <tbody>
                                                            @foreach (CauHoi c in d.CauHois)
                                                            {
                                                                <tr>
                                                                    @*
                                                                        <td class="center">
                                                                            <label class="pos-rel">
                                                                                <input type="checkbox" class="ace" />
                                                                                <span class="lbl"></span>
                                                                            </label>
                                                                        </td>*@

                                                                    <td>@c.TieuDe</td>
                                                                    <td><img height="150" class="thumbnail inline no-margin-bottom" alt="lỗi" src="~/Areas/admin/assets/image/@c.PhuongAnA">A</td>
                                                                    <td><img height="150" class="thumbnail inline no-margin-bottom" alt="lỗi" src="~/Areas/admin/assets/image/@c.PhuongAnB">B</td>
                                                                    <td><img height="150" class="thumbnail inline no-margin-bottom" alt="lỗi" src="~/Areas/admin/assets/image/@c.PhuongAnC">C</td>
                                                                    <td><img height="150" class="thumbnail inline no-margin-bottom" alt="lỗi" src="~/Areas/admin/assets/image/@c.DapAn">Đáp Án</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /.span -->
            </div><!-- /.row -->
            <div class="row">
                <div class="col-xs-12">
                    <div style="display: none">
                        <table id="dynamic-table" class="table table-striped table-bordered table-hover"></table>
                    </div>
                </div>
            </div>
            <div class="hr hr-18 dotted hr-double"></div>
            <button type="button" class="btn btn-danger btn-sm">
                <span class="ace-icon fa fa-pencil-square-o icon-on-right bigger-110"></span>
                Hủy
            </button>
            <button type="submit" class="btn btn-success btn-sm">
                <span class="ace-icon fa fa-pencil-square-o icon-on-right bigger-110"></span>
                Tạo đề thi
            </button>
        }
    </div><!-- /.span -->
</div><!-- /.row -->